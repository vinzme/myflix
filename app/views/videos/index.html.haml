%article.video_category
  %header
    - @categories.each do |category|
      .videos.row
        %br
        %h3= link_to category.name, category_path(category.id)
        %br
        - category.videos.each do |video|
          .video.col-sm-2
            = link_to image_tag("/tmp/#{video.small_cover_url}.jpg"), video_path(video.id)